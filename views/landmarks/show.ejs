<% layout('layouts/boilerplate') %> 

<div class="row">
    <div class="col-6 offset-3">
    <div class="card">
      <img src="<%= landmark.image %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= landmark.title %></h5>
        <p class="card-text"><%= landmark.description %></p>
        <a class="card-link btn btn-dark" href="/landmarks/<%= landmark._id %>/edit">Edit</a>
      </div>
      
      <div class="card-footer">
        <small class="text-muted"><%= landmark.location %></small>
    </div>
    </div>
  </div>
</div>
<div class="mt-5">
    <a class="btn btn-dark" href="/landmarks/">Back</a>
</div>
